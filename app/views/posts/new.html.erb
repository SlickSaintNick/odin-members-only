<h1>New post</h1>

<%= form_with model: @post do|form| %>
  <%= form.label :title %></br>
  <%= form.text_field :title %></br>
  <%= form.label :body %><br>
  <%= form.text_area :body, rows: 10, cols: 50 %><br>
  <%= form.number_field :user_id, id: :post_user_id, value:current_user.id, type: :hidden %>
  <%= form.submit "Post this Article" %>
<% end %>